  <script>
        $(document).ready(function(){
            $('#box3').waypoint(function(direction) {
                $('nav').toggleClass('nav-container');
                
            },{
                offset: '20%'
            }
            );
        }
        );
   
        $(document).ready(function(){
            $('#box3').waypoint(function(direction){
                $(this.element).toggleClass('blue');
                           
            }, 
            { 
                offset: '50%'
            });
        });

    </script>     
